package algoritOrdenacao;

import java.util.ArrayList;
import java.util.List;

public class MergeSort {
	
	public MergeSort() {
		// TODO Auto-generated constructor stub
	}
	
	public void ordenaMergeSort(List<Integer> listInteiros,List<Integer> listInteirosAux, int inicio, int fim) {
        if (inicio < fim) {
            int meio = (inicio + fim) / 2;
            ordenaMergeSort(listInteiros, listInteirosAux, inicio, meio);
            ordenaMergeSort(listInteiros, listInteirosAux, meio + 1, fim);
            intercala(listInteiros, listInteirosAux, inicio, meio, fim);
        }
    }

	private void intercala(List<Integer> listInteiros, List<Integer> listInteirosAux, int inicio, int meio, int fim) {
		for(int k = inicio; k <=fim; k++){
			listInteirosAux.add(listInteiros.get(k));
		}
		
		int i = inicio;
		int j = meio+1;
		
		for(int k = inicio; k <= fim; k++){
			if(i > meio){
				listInteiros.set(k, listInteirosAux.get(j++));
			}else if(j > fim){
				listInteiros.set(k, listInteirosAux.get(i++));
			}else if(listInteirosAux.get(i) < listInteirosAux.get(j)){
				listInteiros.set(k, listInteirosAux.get(i++));
			}else{
				listInteiros.set(k, listInteirosAux.get(j++));
			}
		}
	}
	
	public void imprimeArray(List<Integer> listInteiros){ 
        for (Integer item : listInteiros){
        	System.out.print(item + " ");
        }             
    }
}
